<h1> <%= @quiz.title %></h1>

<%= form_tag @response do %>
    <input type=hidden name=quiz_id[<%=@quiz.id%>] >
    <% @quiz.questions.each_with_index do |question, index| %>
        <h3> <%= question.question_content %> </h3>
        <% Answer.randomize_answers(question).each do |answer| %>
            <p> <%= radio_button :answers, index, answer.id %><%=answer.answer_content %></p>
        <% end %>
    <% end %>
    
    <%= submit_tag "Submit Quiz" %>

<% end %>