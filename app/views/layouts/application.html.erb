<!DOCTYPE html>
<html>
  <head>
    <title>QuizKnows</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>        
    <header>
    <h1 class="logo"> QuizKnows </h1>
    <nav>   
        <ul>
            <% if current_user %>
              <li><%= link_to "Logout", :logout %></li>
              <li><%= link_to "Edit User", edit_user_path(current_user) %></li>
              <li><%= link_to "Create Quiz", new_quiz_path %></li>
              <li><%= link_to "Take Quiz", quizzes_path %></li>
              <li><%= link_to "Home Page", user_path(current_user) %></li>
            <% else %>
              <li><a href="/"> about </a></li>
              <li><a href="/"> enter social-security </a></li>
              <li><a href="/"> getting started </a></li>
            <% end %>
        </ul>
    </nav>
  </header>
  <div class="sidebar">
    <%= render "stats/index" %>
  </div>
  <div class="container">
    <p class="notice"><%= notice %></p>
    <%=yield%>
  </div>
  </body>
</html>
